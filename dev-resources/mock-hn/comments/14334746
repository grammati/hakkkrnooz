  &gt;&gt;&gt; p(&quot;&#x2F;product.php?name=etc&quot;)
  array([1])
  &gt;&gt;&gt; p(&quot;&#x2F;login.php?name=rfoo&amp;pass=hehe&quot;)
  array([1])
  &gt;&gt;&gt; p(&quot;&#x2F;download.php?file=&#x2F;root&#x2F;.bashrc&quot;)
  array([0])
